{#.}
    <div class="c-check-radio {class}" {?.role}role="{.}"{/.role}>
        {?.input}
            {@element el=.input addClass="c-input"/}
        {:else}
            <input class="c-input" type={.type} name={.name} {?.checked}checked{/.checked} {?.href}data-href="{.href}"{/.href} {?.value}data-value="{.value}"{/.value}/>
        {/.input}

        {@icon name="checkmark" class="c-check-radio__icon" /}
    </div>
{/.}
