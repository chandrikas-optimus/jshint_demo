<a class="c-action {.class}" {?.href}href="{.href}"{/.href} {?value}data-value={value}{/value}>
    {?.label}
        <label class="c-action__label {.labelClass}">
            {.label}
        </label>
    {/.label}
    {?.desktop}
        {.desktop}
    {/.desktop}
    <div class="c-action__arrow">
        {@icon name="arrow-forward" class="c-button__icon" /}
    </div>
</a>
