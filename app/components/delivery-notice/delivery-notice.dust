{?note}
    <div class="c-callout {class}">
        {note}

        {deliveryRestrictions}

        <button class="c-button c--link c--info js-tooltip-button" data-target=".js-delivery-tooltip">{@icon name="help" class="c--x-small" /}</button>

        <div class="js-delivery-tooltip" hidden>
            <div class="delivery-notice js-content js-delivery-notice">
                {tooltipContent|s}
            </div>
        </div>
    </div>
{/note}
